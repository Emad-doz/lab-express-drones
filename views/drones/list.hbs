<h2>Available drones</h2>

<div class = "container">
    {{#each myDrones}}
        <div class= "container2">
            <p> <h4>Name:</h4>{{this.name}}</p>
            <p><h4>Propellers:</h4>{{this.propellers}}</p>
            <p><h4>Max Speed:</h4>{{this.maxSpeed}}</p>
            <button type="submit"><a href="/drones/{{this._id}}/edit">Edit</a></button>
        
            <form action="/drones/{{this._id}}/" method="post">
                <button type="submit">Delete</button>
            </form>
        </div>
    {{/each}}
    
</div>
<hr>
<button type="submit"><a href="/">Back</a></button>
